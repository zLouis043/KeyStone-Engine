# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug_x64
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug_x64)
  KeyStoneCore_config = debug_x64
  KeyStone_CLI_config = debug_x64

else ifeq ($(config),release_x64)
  KeyStoneCore_config = release_x64
  KeyStone_CLI_config = release_x64

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := KeyStoneCore KeyStone-CLI

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

KeyStoneCore:
ifneq (,$(KeyStoneCore_config))
	@echo "==== Building KeyStoneCore ($(KeyStoneCore_config)) ===="
	@${MAKE} --no-print-directory -C KeyStoneCore -f Makefile config=$(KeyStoneCore_config)
endif

KeyStone-CLI: KeyStoneCore
ifneq (,$(KeyStone_CLI_config))
	@echo "==== Building KeyStone-CLI ($(KeyStone_CLI_config)) ===="
	@${MAKE} --no-print-directory -C KeyStoneCLI -f Makefile config=$(KeyStone_CLI_config)
endif

clean:
	@${MAKE} --no-print-directory -C KeyStoneCore -f Makefile clean
	@${MAKE} --no-print-directory -C KeyStoneCLI -f Makefile clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug_x64"
	@echo "  release_x64"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   KeyStoneCore"
	@echo "   KeyStone-CLI"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"